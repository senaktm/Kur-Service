
@model List<string>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @using (Html.BeginForm("KurGetir", "Home", FormMethod.Post, null))
    {
    <div>
        <label>Para birimi seciniz :</label>
    </div>
    <div>
        <select name="paraBirimi">
            @foreach (var item in Model)
            {
                <option>@item</option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Kurlari Getir"/>
    </div>
    <div>
    @Html.Partial("KurlarListesi",(List<double>)ViewBag.Kurlar)
    </div>
    }
</body>
</html>
